{
  "name": "guajirobot",
  "version": "0.0.1",
  "description": "A telegram bot to help with our wedding",
  "main": "index.js",
  "dependencies": {
    "airtable": "^0.6.0",
    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "mocha": "^6.2.0",
    "mongodb": "^3.2.7",
    "node-telegram-bot-api": "^0.30.0",
    "remove-accents": "^0.4.2",
    "require-all": "^3.0.0"
  },
  "scripts": {
    "local": "SERVICE_ENV=local node simulate.js",
    "dev": "SERVICE_ENV=dev node simulate.js",
    "live": "SERVICE_ENV=live node simulate.js",
    "deploy-dev": "sls deploy --region eu-west-1 --stage dev",
    "deploy-live": "sls deploy --region eu-west-1 --stage live",
    "manifest": "node_modules/make-manifest/bin/make-manifest",
    "test": "mocha test",
    "lint": "eslint .",
    "qa": "npm run lint && npm run test",
    "docker": "docker-compose --file docker-compose.yml up -d --force-recreate --build"
  },
  "devDependencies": {
    "body-parser": "^1.19.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^11.3.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-mocha": "^5.2.0",
    "expect.js": "^0.3.1",
    "express": "^4.17.1",
    "husky": "^3.0.0",
    "make-manifest": "^1.0.1"
  },
  "husky": {
    "hooks": {
      "precommit": "npm run lint",
      "prepush": "npm run test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/feliun/guajirobot.git"
  },
  "author": "Felipe Polo Ruiz",
  "license": "ISC"
}
